#!/usr/bin/env python3
import sys
import re
import shlex

from subprocess import check_output, check_call

def p(cmd):
    args = shelx.split(cmd)
    check_call

if len(sys.argv) > 1:
    message = sys.argv[1]
else:
    message = p('git show -s --format=%B HEAD')

res = p(f'git-hub pull new -m "{message}"')
print(res)
pr = re.search(r'\[(\d+)\]', res)[1]
p(f'git-hub pull comment -m "bors r+\nðŸ¤–" {pr}')
