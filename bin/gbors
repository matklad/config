#!/usr/bin/env python3
import sys
import re
from subprocess import check_output, check_call

if len(sys.argv) > 1:
    message = sys.argv[1]
else:
    message = check_output('git show -s --format=%B HEAD'.split(), text=True)

res = check_output([*'git-hub pull new -m'.split(), message], text=True)
print(res)
pr = re.search(r'\[(\d+)\]', res)[1]
check_call([*'git-hub pull comment -m'.split(), "bors r+\nðŸ¤–", str(pr)])
