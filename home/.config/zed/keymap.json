[
  {
    "bindings": {
      "ctrl-o": "file_finder::Toggle",
      ", o s": "zed::OpenSettings",
    }
  },
  {
    "context": "Workspace",
    "bindings": {
       "alt-x": "command_palette::Toggle",
       "ctrl-u": "task::Spawn",
       ", o k": "zed::OpenKeymap",
       ", o K": "zed::OpenDefaultKeymap",
       ", o t": "workspace::ToggleRightDock",
       ", o e": "project_panel::ToggleFocus",
       ", 1": ["workspace::ActivatePane", 0],
       ", 2": ["workspace::ActivatePane", 1],
       ", 3": ["workspace::ActivatePane", 2],
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "super-n": ["workspace::ActivatePaneInDirection", "Right"],
      "super-e": "pane::SplitRight",
      "super-f": "workspace::CloseInactiveTabsAndPanes",
      "super-k": "pane::CloseAllItems",

    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-i": "editor::ScrollCursorCenterTopBottom",
      "ctrl-enter": "editor::NewlineBelow",
      "alt-left": "pane::GoBack",
      "alt-right": "pane::GoForward",
      "ctrl-w": "editor::SelectLargerSyntaxNode",
      "ctrl-W": "editor::SelectSmallerSyntaxNode",
      "alt-w": ["editor::SelectNext", { "replace_newest": false }],
      "alt-W": "editor::UndoSelection",
      ", p": "editor::Format",
      ", ,": ["editor::Type", { "text": "," }],
      ", .": "editor::GoToDefinition",
      ", >": "editor::GoToDefinitionSplit",
      ", e s": "editor::SortLinesCaseSensitive",
      ", g d": "editor::GoToDefinition",
      ", g i": "editor::GoToImplementation", 
      ", g e": "editor::MoveToEnd",
      ", g g": "editor::MoveToBeginning",
      ", g l": "go_to_line::Toggle",
      ", l": "outline::Toggle",
      ", L": "project_symbols::Toggle",
      ", n c": "editor::GoToHunk",
      "ctrl-u": "task::Spawn",
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "up": "editor::MoveUp",
      "down": "editor::MoveDown",
      "ctrl-up": "editor::ContextMenuPrev",
      "ctrl-down": "editor::ContextMenuNext",
    }
  },
]
