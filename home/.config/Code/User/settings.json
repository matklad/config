{
    "[html]": {
        "editor.tabSize": 2
    },

    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "hidden",
    "window.newWindowDimensions": "maximized",
    "window.restoreWindows": "none",
    "window.title": "${rootName}",
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,

    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Pale Fire",
    "workbench.editor.showTabs": false,
    "workbench.panel.defaultLocation": "right",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "workbench.tree.indent": 16,
    "workbench.useExperimentalGridLayout": true,

    "editor.accessibilitySupport": "off",
    "editor.codeLens": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.cursorSurroundingLines": 5,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "editor.lineHeight": 21,
    "editor.formatOnType": true,
    "editor.hover.enabled": false,
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "none",
    "editor.roundedSelection": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false,
    "editor.semanticTokenColorCustomizations": {
        "[Pale Fire]": {
            "rules": {
                "unresolvedReference": "#9C6363",
            }
        }
    },

    // small gutter
    // "editor.folding": false,
    "editor.glyphMargin": false,
    "editor.lineDecorationsWidth": 0, // undocumented
    "editor.lineNumbers": "off",
    "editor.lineNumbersMinChars": 0, // undocumented

    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,

    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,

    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 100,
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "terminal.integrated.fontSize": 12,

    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "none",
    "update.showReleaseNotes": false,

    "git.alwaysShowStagedChangesResourceGroup": true,

    "debug.onTaskErrors": "debugAnyway",

    // plugins
    "typescript.suggest.completeFunctionCalls": true,
    "typescript.updateImportsOnFileMove.enabled": "always",

    "aceJump.finder.pattern": "[ ,-.*{}_()\"'`<>\\/[:&=|;]",
    "aceJump.placeholder.backgroundColor": "#3F3F3F",
    "aceJump.placeholder.color": "#BFEBBF",
    "aceJump.placeholder.upperCase": true,
    "aceJump.finder.skipSelection": true,
    "aceJump.scroll.mode": "none",

    "insertDateString.format": "YYYY-MM-DD HH:MM:00 ZZZZ",

    "macros": {
        "closePanelCloseEditorsToggleSidebar": [
            "workbench.action.closePanel",
            "workbench.action.closeEditorsInOtherGroups",
            "workbench.action.closeOtherEditors",
            "workbench.action.toggleSidebarVisibility",
        ],
        "closePanelCloseEditors": [
            "workbench.action.closePanel",
            "workbench.action.closeEditorsInOtherGroups",
            "workbench.action.closeOtherEditors",
        ],
        "focusPanelToggleSidebar": [
            "workbench.action.toggleSidebarVisibility",
            "workbench.action.focusPanel",
        ],
        "closePanelFocusFilesExplorer": [
            "workbench.action.closePanel",
            "workbench.files.action.focusFilesExplorer",
        ]
    },

    "liveServer.settings.donotShowInfoMsg": true,

    "rust-analyzer.completion.addCallArgumentSnippets": false,
    "rust-analyzer.callInfo.full": false,
    "rust-analyzer.checkOnSave.enable": false,

    "lldb.library": "/nix/store/vkw0nx0c1cfqm68gn9vz0lw1r6ap41p1-lldb-7.1.0/lib/liblldb.so",

    "asciidoc.preview.useEditorStyle": false,

    "selectline.alignment": "right",
    "selectline.displayFormat": "(%d Lines)",
    "selectline.statusbarPriority": 101,

    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#00000000",
        "widget.shadow": "#00000000",
        "editor.foldBackground": "#3F3F3F",
    },
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.numSuggestions": 3,
    "cSpell.language": "en,ru",
