scrollback_pager_history_size 1024
enable_audio_bell no
cursor_blink_interval 0
window_padding_width 1

font_family JetBrains Mono
font_size 12
enabled_layouts tall

map esc send_text all \x03
map ctrl+c copy_to_clipboard
map ctrl+v paste_from_clipboard

map alt+e                  kitten hints --alphabet xtnhesoai
map ctrl+y                 kitten hints --alphabet xtnhesoai --type linenum code -g {path}:{line}:0
map ctrl+shift+e           send_text all \x0b
map alt+n                  kitten kitty_grab/grab.py

map super+l       kitten close_other_windows.py
map super+n       next_window
map super+e       new_window_with_cwd
map super+k       close_window

map ctrl+shift+enter no_op
map ctrl+shift+[     no_op
map ctrl+shift+]     no_op


# BEGIN_KITTY_THEME
# Modus Operandi
include current-theme.conf
# END_KITTY_THEME
